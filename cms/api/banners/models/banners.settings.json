  "collectionName": "banner",
  "info": {
    "name": "Banner"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "background": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
