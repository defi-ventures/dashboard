{
  "kind": "collectionType",
  "collectionName": "tiles",
  "info": {
    "name": "Tile"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "icon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "iconFull": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "url": {
      "type": "string",
      "required": true
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "description": {
      "type": "string"
    },
    "position": {
      "type": "integer",
      "unique": true,
      "min": 0,
      "default": 0
    },
    "separator": {
      "type": "boolean"
    },
    "primaryLink": {
      "type": "component",
      "repeatable": false,
      "component": "button.cta"
    },
    "secondaryLink": {
      "type": "component",
      "repeatable": false,
      "component": "button.cta"
    }
  }
}
