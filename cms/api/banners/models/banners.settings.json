      ],
      "plugin": "upload",
      "required": true
    },
    "cta": {
      "type": "component",
      "repeatable": false,
      "component": "button.cta"
    },
    "active": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
